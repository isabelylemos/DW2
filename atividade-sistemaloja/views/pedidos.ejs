<%- include ('partials/navbar.ejs') %>
<%- include ('partials/header.ejs') %>

  <p class="msg">Pedidos com os maiores valores do mês! </p>
  <div class="linha"></div>

<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Número do Pedido</th>
        <th scope="col">Valor</th>
        
      </tr>
    </thead>
    <% listaPedidos.forEach((listaPedidos)=>{ %>
    <tbody>
      <tr>
        <td><%= listaPedidos.numero %></td>
        <td><%= listaPedidos.valor.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %></td>
        
      </tr>
    <% }) %>
    </tbody>
  </table>
  
<%- include ('partials/footer.ejs') %>