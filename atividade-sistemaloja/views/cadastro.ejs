<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<% if (messages.danger){ %>
    <div class="alert alert-danger">
        <%= messages.danger %>
    </div>
<% } %>

<div class="container col-4">
    <div class="card">
        <card-header>
            <p class="msg-card">Cadastro de Usuário</p>
        </card-header>
            
        <div class="card-body">
            <form action="/createUser" method="post">
                <label>E-mail:</label>
                <input type="email" class="form-control" name="email" placeholder="email@exemplo.com" required><br>
                <label>Senha:</label>
                <input type="password" class="form-control" name="password" placeholder="Insira uma senha com no mínimo 8 caracteres" required><br>
                <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
            <hr>
            <h6>Já possui conta? <a href="/login">Faça o login!</a></h6>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') %>