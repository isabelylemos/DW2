<%- include ('partials/navbar.ejs') %>
<%- include ('partials/header.ejs') %>
<p class="msg">Pizzas mais vendidas do mês!</p>
<div class="linha"></div>

<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Preço</th>
        <th scope="col">Categoria</th>
      </tr>
    </thead>
    <% listaProdutos.forEach((listaProdutos)=>{ %>
    <tbody>
      <tr>
        <td><%= listaProdutos.nome %></td>
        <td><%= listaProdutos.preco.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %></td>
        <td><%= listaProdutos.categoria %></td>
      </tr>
    <% }) %>
    </tbody>
  </table>
<%- include ('partials/footer.ejs') %>
