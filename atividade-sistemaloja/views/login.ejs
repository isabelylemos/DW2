<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<% if (messages.danger){ %>
    <div class="alert alert-danger">
        <%= messages.danger %>
    </div>
<% } %>

<div class="container col-4">
    <div class="card">
        <card-header>
            <p class="msg-card">Login de Administrador</p>
        </card-header>
        <div class="card-body">
            <p style="color: red; font-size: 0.7em;">Você precisa estar logado para acessar os recursos do painel</p>
            <form action="/authenticate" method="post">
                <label>E-mail:</label>
                <input type="email" class="form-control" name="email" placeholder="email@exemplo.com" required><br>
                <label>Senha:</label>
                <input type="password" class="form-control" name="password" placeholder="Insira a sua senha" required><br>
                <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
            <hr>
            <h6>Não possui conta? <a href="/cadastros">Cadastre-se!</a></h6>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') %>